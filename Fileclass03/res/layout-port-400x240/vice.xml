<?xml version="1.0" encoding="utf-8"?>
 <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" 
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >	

   <com.study.android.HWtrying.Mview
    android:id="@+id/mviewid"
   android:layout_width="fill_parent" 
   android:layout_height="wrap_content"     
   />
   
   <com.study.android.HWtrying.Kview
   android:id="@+id/kviewid"
   android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
   />
   

   
   <LinearLayout android:id="@+id/AbsoluteLayout01" 
   		android:layout_width="wrap_content" 
   		android:layout_height="wrap_content">
   <Button 
    android:id="@+id/button"
    android:background="#00000000"			
    android:layout_width="45px" 
    android:layout_height="40px" 
    android:text="Title"
    android:layout_marginTop="80px"
    android:layout_marginLeft="95px"
    /> 
    </LinearLayout>

     <LinearLayout android:id="@+id/AbsoluteLayout02" 
   	android:layout_width="wrap_content" 
   	android:layout_height="wrap_content">
    <Button 
    android:id="@+id/textid"
    android:background="@drawable/bi"				
    android:layout_width="26px" 
    android:layout_height="33px" 
    android:text="Text"
    android:layout_marginTop="360px"
    android:layout_marginLeft="1px"
    android:textSize="12dip"
    />
    
    <Button 
    android:id="@+id/graphid"
    android:background="@drawable/huatu"			
    android:layout_width="26px" 
    android:layout_height="33px" 
    android:text="Graph"
    android:layout_marginTop="360px"
    android:layout_marginLeft="1px"
    android:textSize="12dip"
    />
    
    <Button 
    android:id="@+id/editid"
    android:background="@drawable/bianji"			
    android:layout_width="26px" 
    android:layout_height="33px" 
    android:text="Edit"
    android:layout_marginTop="360px"
    android:layout_marginLeft="1px"
    android:textSize="12dip"
    />
     
    <Button 
    android:id="@+id/spaceid"
    android:background="@drawable/kongge"			
    android:layout_width="26px" 
    android:layout_height="33px" 
    android:text="Space"
    android:layout_marginTop="360px"
    android:layout_marginLeft="1px"
    android:textSize="12dip"
    />
    
    <Button 
    android:id="@+id/enterid"
    android:background="@drawable/huiche"			
    android:layout_width="27px" 
    android:layout_height="33px" 
    android:text="Enter"
    android:layout_marginTop="360px"
    android:layout_marginLeft="1px"
    android:textSize="12dip"
    />
    
     
    <Button 
    android:id="@+id/backspaceid"
    android:background="@drawable/huitui"			
    android:layout_width="42px" 
    android:layout_height="33px" 
    android:text="Backspace"
    android:layout_marginTop="360px"
    android:layout_marginLeft="1px"
    android:textSize="12dip"
    />
    
    <Button 
    android:id="@+id/doneid"
    android:background="@drawable/done"			
    android:layout_width="26px" 
    android:layout_height="33px" 
    android:text="Done"
    android:layout_marginTop="360px"
    android:layout_marginLeft="1px"
    android:textSize="12dip"
    />
    
    <Button 
       android:id="@+id/autospace"
    android:background="@drawable/spacectrl"		
    android:layout_width="42px" 
    android:layout_height="33px" 
    android:text="ImageSave"
    android:layout_marginTop="360px"
    android:layout_marginLeft="1px"
    android:textSize="10dip"
    />
    
    </LinearLayout>   
   

    
    
    <LinearLayout android:id="@+id/AbsoluteLayout03" 
   		android:layout_width="wrap_content" 
   		android:layout_height="400px"
   		>  
  
     <Button 
    android:id="@+id/eraserid"
    android:background="@drawable/eraser"		
    android:layout_width="40px" 
    android:layout_height="30px" 
    android:text="橡皮"
    android:layout_marginTop="100px"
    android:layout_marginLeft="200px"
    android:visibility="invisible"
    />
    
    <Button 
    android:id="@+id/innertextid"
    android:background="@drawable/wenzi"		
    android:layout_width="40px" 
    android:layout_height="30px" 
    android:text="添字"
    android:layout_marginTop="150px"
    android:layout_marginLeft="-40px"
    android:visibility="invisible"
    />
    <Button 
    android:id="@+id/colorofimagepaint"
    android:background="@drawable/yanse"			
    android:layout_width="40px" 
    android:layout_height="30px" 
    android:text="颜色"
    android:layout_marginTop="58px"
    android:layout_marginLeft="-40px"
    android:visibility="invisible"
    />    
     <Button 
    android:id="@+id/backtodraw"
    android:background="@drawable/huihua"			
    android:layout_width="40px" 
    android:layout_height="30px" 
    android:text="绘图"
    android:layout_marginTop="16px"
    android:layout_marginLeft="-40px"
    android:visibility="invisible"
    />  
    <Button 
    android:id="@+id/paintstrokesize"
    android:background="@drawable/huihua"			
    android:layout_width="40px" 
    android:layout_height="30px" 
    android:text="粗细"
    android:layout_marginTop="190px"
    android:layout_marginLeft="-40px"
    android:visibility="invisible"
    /> 
   </LinearLayout>
   
           
    <RelativeLayout android:id="@+id/AbsoluteLayout04" 
   		android:layout_width="wrap_content" 
   		android:layout_height="400px"
   	>  
    <com.study.android.VerticalSeekbar.VerticalSeekBar
	android:id="@+id/SeekBar01"
    android:progressDrawable="@drawable/progress_vertical"
    android:thumb="@drawable/seek_thumb"
    android:max="100"
    android:progress="30"
    android:layout_height="80dip" 
    android:layout_width="20dip"
 	android:layout_marginTop="250px"
    android:layout_marginLeft="215px"
    android:visibility="invisible"/> 
    </RelativeLayout>
    

     
    
 </FrameLayout> 