<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  android:id="@+id/widget34"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:orientation="vertical"
  android:background="@drawable/green"
  xmlns:android="http://schemas.android.com/apk/res/android"
  >
  <LinearLayout
  android:layout_width="fill_parent"
  android:layout_height="70px"
  android:orientation="horizontal"
  android:layout_marginTop="10px"
  >
  <LinearLayout
  android:layout_width="400px"
  android:layout_height="70px"
  android:orientation="horizontal"
  >
      <TextView 
      android:layout_height="30px" 
      android:text="@string/str_receive" 
      android:layout_width="80px" 
      android:id="@+id/myTextView1" 
      android:layout_marginLeft="10px">
      </TextView>
  	<EditText
    android:id="@+id/myEdit_Reciever"
    android:layout_width="280px"
    android:layout_marginLeft="0px"
    android:layout_height="70px"
    
  >
  </EditText>
  </LinearLayout>
  <LinearLayout
  android:layout_width="400px"
  android:layout_height="70px"
  android:orientation="horizontal"
  >
  <TextView
    android:id="@+id/myTextView2"
    android:layout_width="80px"
    android:layout_height="30px"
    android:text="@string/str_cc"
    android:layout_marginLeft="10px"
  >
  </TextView>
  
  <EditText
    android:id="@+id/myEdit_CC"
    android:layout_width="280px"
    android:layout_marginLeft="0px"
    android:layout_height="wrap_content"
  >
  </EditText>
  </LinearLayout>
  </LinearLayout>
  <LinearLayout
  android:layout_width="fill_parent"
  android:layout_height="70px"
  android:orientation="horizontal"
  android:layout_marginTop="10px"
  >
  <LinearLayout
  android:layout_width="400px"
  android:layout_height="70px"
  android:orientation="horizontal"
  >
  <TextView
    android:id="@+id/myTextView3"
    android:layout_width="80px"
    android:layout_height="30px"
    android:text="@string/str_subject"
    android:layout_marginLeft="10px"
  >
  </TextView>
  <EditText
    android:id="@+id/myEdit_Subject"
    android:layout_width="280px"
    android:layout_marginLeft="0px"
    android:layout_height="wrap_content"
  >
  </EditText>
  
  </LinearLayout>
  <Button
    android:id="@+id/myButton_Send"
    android:layout_width="90px"
    android:layout_height="60px"
    android:layout_marginLeft="0px"  
    android:text="@string/str_button"
  >
  </Button>
  </LinearLayout>
  
  
  <EditText
    android:id="@+id/myEdit_Body"
    android:layout_width="fill_parent"
    android:layout_height="250px"
  >
   </EditText>
   
</LinearLayout>