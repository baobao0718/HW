<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    
    <TableLayout 
     android:id="@+id/tablelayout6"
     android:layout_width="480px"
     android:layout_height="70px"
     >
  	<TableRow>
    
     <TextView   
     android:text="书写格式"
     android:textSize="20dip"
     android:textColor="#ffcc00"
     android:layout_width="fill_parent"
     android:layout_height="wrap_content"
     android:layout_marginLeft = "200px" 
     android:layout_marginTop= "5px"
     
     />   
     </TableRow>
     </TableLayout> 
    
    
     
  	
	<TextView   
     android:text="书写速度"
     android:textColor="#000000"
     android:layout_width="fill_parent"
     android:layout_height="70px"
     android:layout_marginLeft = "20px" 
     android:layout_marginTop= "100px" 
     />   
     
     <TableLayout 
     android:id="@+id/tablelayout7"
     android:layout_width="480px"
     android:layout_height="70px"
     android:layout_marginTop= "150px" 
     >
  	<TableRow> 
  	
     <TextView  
     android:id="@+id/speedtext"
     android:text="快"
     android:textColor="#000000"
     android:layout_width="20dip"
     android:layout_height="60px"
     android:layout_marginLeft = "20px" 
      android:layout_marginTop= "13px" 
     />   
     <SeekBar 
    android:id="@+id/seekspeed"
    android:layout_width="210dip" 
    android:layout_height="25dip" 
    android:max="100"
    android:progress="50"
    android:layout_marginTop= "15px" 
     android:layout_marginLeft= "110px"
      android:gravity="center"
   	android:progressDrawable="@drawable/seekbar_style"      
    android:thumb="@drawable/thumb_horizontal" 
    />
      <TextView  
     android:id="@+id/speedtext1"
     android:text="慢"
     android:textColor="#000000"
     android:layout_width="40dip"
     android:layout_height="60px"
     android:layout_marginLeft = "60px" 
      android:layout_marginTop= "20px" 
     />   
    </TableRow>
     </TableLayout> 
     
  
     <TextView   
     android:text="文字笔画宽度"
     android:textColor="#000000"
     android:layout_width="fill_parent"
     android:layout_height="70px"
     android:layout_marginLeft = "20px" 
       android:layout_marginTop= "250px" 
     />  
     
      <TableLayout 
     android:id="@+id/table8"
     android:layout_width="480px"
     android:layout_height="70px"
     android:layout_marginTop= "310px" 
     >
  	<TableRow> 

     <TextView  
     android:id="@+id/strokewidthtext"
     android:text="当前值:5"
     android:textColor="#000000"
     android:layout_width="70dip"
     android:layout_height="60px"
     android:layout_marginLeft = "20px" 
      android:layout_marginTop= "20px" 
     />    
     <SeekBar 
    android:id="@+id/strokewidth"
     android:layout_width="210dip" 
    android:layout_height="25dip" 
    android:max="100" 
     android:layout_marginTop= "15px" 
     android:layout_marginLeft= "35px"
      android:gravity="center"
   	android:progressDrawable="@drawable/seekbar_style"      
    android:thumb="@drawable/thumb_horizontal" 
    />
    
    </TableRow>
     </TableLayout> 
     
     
     <TextView   
     android:text="书写基准线高度"
     android:textColor="#000000"
     android:layout_width="fill_parent"
     android:layout_height="70px"
     android:layout_marginLeft = "20px" 
       android:layout_marginTop= "410px" 
     />  
     
      <TableLayout 
     android:id="@+id/table9"
     android:layout_width="480px"
     android:layout_height="70px"
     android:layout_marginTop= "470px" 
     >
  	<TableRow> 

     <TextView  
     android:id="@+id/baselineheighttext"
     android:text="当前值:56"
     android:textColor="#000000"
     android:layout_width="70dip"
     android:layout_height="60px"
     android:layout_marginLeft = "20px" 
      android:layout_marginTop= "20px" 
     />    
     <SeekBar 
    android:id="@+id/baselineheight"
     android:layout_width="210dip" 
    android:layout_height="25dip" 
    android:max="100" 
     android:layout_marginTop= "15px" 
     android:layout_marginLeft= "35px"
       android:gravity="center"
   	android:progressDrawable="@drawable/seekbar_style"      
    android:thumb="@drawable/thumb_horizontal" 
    />
    
    </TableRow>
     </TableLayout> 
     
     
     
     
     <TextView   
     android:text="文字提交方式"
     android:textColor="#000000"
     android:layout_width="fill_parent"
     android:layout_height="70px"
     android:layout_marginLeft = "20px" 
       android:layout_marginTop= "570px" 
     />  
   
      <TableLayout 
     android:id="@+id/table10"
     android:layout_width="480px"
     android:layout_height="70px"
     android:layout_marginTop= "630px" 
     >
  	<TableRow> 


     <RadioGroup  
    android:id="@+id/submit_type"  
    android:layout_width="380dip"  
    android:layout_height="35dip" 
    android:layout_marginTop= "10px" 
    android:layout_marginLeft= "20px"
    android:checkedButton="@+id/manualsubmit"  
    android:orientation="horizontal" android:gravity="center_vertical">  
    <RadioButton  
        android:id="@+id/manualsubmit"  
        android:text="手动提交"  
        android:textColor="#000000"
        android:layout_width="120dip" 
        />  
    <RadioButton  
        android:id="@+id/autosubmit"  
        android:layout_width="120dip"  
        android:text="自动提交"  
        android:textColor="#000000"
        android:layout_marginLeft= "100px"
        />      
	</RadioGroup>            
     
   
    </TableRow>
     </TableLayout> 
 
    </RelativeLayout>