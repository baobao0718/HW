<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  android:id="@+id/widget34"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:orientation="vertical"
  android:background="@drawable/green"
  xmlns:android="http://schemas.android.com/apk/res/android"
  >
  <LinearLayout
  android:layout_width="fill_parent"
  android:layout_height="210px"
  android:orientation="vertical"
  android:layout_marginTop="20px"
  >
  <LinearLayout
  android:layout_width="fill_parent"
  android:layout_height="70px"
  android:orientation="horizontal"
  >
      <TextView 
      android:layout_height="40px" 
      android:text="@string/str_receive" 
      android:layout_width="80px" 
      android:id="@+id/myTextView1" 
      android:layout_marginLeft="10px">
      </TextView>
  	<EditText
    android:id="@+id/myEdit_Reciever"
    android:layout_width="360px"
    android:layout_height="wrap_content"
    android:textSize="18sp"
  >
  </EditText>
  </LinearLayout>
  <LinearLayout
  android:layout_width="fill_parent"
  android:layout_height="70px"
  android:orientation="horizontal"
  >
  <TextView
    android:id="@+id/myTextView2"
    android:layout_width="80px"
    android:layout_height="40px"
    android:text="@string/str_cc"
    android:layout_marginLeft="10px"
  >
  </TextView>
  
  <EditText
    android:id="@+id/myEdit_CC"
    android:layout_width="360px"
    android:layout_height="wrap_content"
    android:textSize="18sp"
  >
  </EditText>
  </LinearLayout>
  <LinearLayout
  android:layout_width="fill_parent"
  android:layout_height="70px"
  android:orientation="horizontal"
  >
  <TextView
    android:id="@+id/myTextView3"
    android:layout_width="80px"
    android:layout_height="40px"
    android:text="@string/str_subject"
    android:layout_marginLeft="10px"
  >
  </TextView>
  <EditText
    android:id="@+id/myEdit_Subject"
    android:layout_width="360px"
    android:layout_height="wrap_content"
    android:textSize="18sp"
  >
  </EditText>
  </LinearLayout>
  </LinearLayout>
  <LinearLayout
  android:layout_width="fill_parent"
  android:layout_height="70px"
  android:orientation="horizontal"
  >
  <Button
    android:id="@+id/myButton_Send"
    android:layout_width="80px"
    android:layout_height="60px"
    android:text="@string/str_button"
  >
  </Button>
  <ProgressBar
        android:id="@+id/progressBar1"
        android:layout_width="40dip"
        android:layout_height="40dip" 
        
   	 	style="?android:attr/progressBarStyleLarge">
 	</ProgressBar>
 	<TextView 
 	android:id="@+id/processtext"
 	android:layout_width="wrap_content"
 	android:layout_height="wrap_content"
 	android:layout_marginTop="1dip"
 	android:text="正在生成文件，请稍候……"
 	/>
  
  </LinearLayout>
  <EditText
    android:id="@+id/myEdit_Body"
    android:layout_width="fill_parent"
    android:layout_height="420px"
    android:textSize="18sp"
    android:layout_x="0px"
    android:layout_y="202px"
  >
   </EditText>
   
</LinearLayout>