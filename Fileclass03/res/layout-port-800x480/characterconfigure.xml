   	 android:id="@+id/sampleoftextview"
   	 android:layout_marginTop = "20px"
   	 android:layout_width="480dip" 
   	 android:layout_height="230dip"/>
   	 

     </TableRow>
     </TableLayout> 
     
         </RelativeLayout>