<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    
    <TableLayout 
     android:id="@+id/tablelayout9"
     android:layout_width="800dip"
     android:layout_height="40dip"
     >
  	<TableRow>
    
     <TextView   
     android:text="文字设置"
     android:textColor = "#ffcc00"
     android:textSize="20dip"
     android:layout_width="fill_parent"
     android:layout_height="wrap_content"
     android:layout_marginLeft = "330px" 
     android:layout_marginTop= "5px" 
     />   
     </TableRow>
     </TableLayout> 
    
    
     
  	
	  
     
     <TableLayout 
     android:id="@+id/tablelayout10"
     android:layout_width="800dip"
     android:layout_height="40dip"
     android:layout_marginTop= "10dip" 
     >
  	<TableRow> 
  	<TextView   
     android:text="文字大小"
     android:textColor="#000000"
     android:layout_width="70dip"
     android:layout_height="20dip"
     android:layout_marginLeft = "30dip" 
      android:layout_marginTop= "5dip" 
     /> 
  	<TextView   
  	 android:id="@+id/charactertext"
  	 android:text="当前值:50"
     android:textColor="#000000"
     android:layout_width="70dip"
     android:layout_height="20dip"
     android:layout_marginLeft = "40dip" 
      android:layout_marginTop= "5dip" 
      
     />   
     <SeekBar 
    android:id="@+id/charactersize"
    android:layout_width="230dip" 
    android:layout_height="25dip" 
    android:max="100"
    android:progress="50"
    android:layout_marginTop= "0dip" 
     android:layout_marginLeft= "85px"
     android:gravity="center"
   	android:progressDrawable="@drawable/seekbar_style"      
    android:thumb="@drawable/thumb_horizontal" 
     
    />
    
    </TableRow>
     </TableLayout> 
     
  
     
     
      <TableLayout 
     android:id="@+id/tablelayout11"
     android:layout_width="800px"
     android:layout_height="60px"
     android:layout_marginTop= "1dip" 
     >
  	<TableRow> 
     <TextView   
     android:text="文字间间距"
     android:textColor="#000000"
     android:layout_width="80dip"
     android:layout_height="20dip"
     android:layout_marginLeft = "30dip" 
       android:layout_marginTop= "5dip" 
     />  
     <TextView  
     android:id="@+id/spacewidthtext"
      android:text="当前值:5"
     android:textColor="#000000"
     android:layout_width="70dip"
     android:layout_height="20dip"
     android:layout_marginLeft = "30dip" 
      android:layout_marginTop= "5dip" 
     />    
     <SeekBar 
    android:id="@+id/spacewidth"
     android:layout_width="230dip" 
    android:layout_height="25dip" 
    android:max="100"
    android:progress="30"
     android:layout_marginTop= "10px" 
     android:layout_marginLeft= "85px"
     android:gravity="center"
   	android:progressDrawable="@drawable/seekbar_style"      
    android:thumb="@drawable/thumb_horizontal" 
    />
     
    </TableRow>
     </TableLayout> 
     <TableLayout 
     android:layout_width="480px"
     android:layout_height="60px"
     android:layout_marginTop= "1dip" 
     >
  	<TableRow> 

     <TextView  
     android:text="文字颜色"
     android:textColor="#000000"
     android:layout_width="70dip"
     android:layout_height="20dip"
     android:layout_marginLeft = "30dip" 
      android:layout_marginTop= "5px" 
     />    
     <Button
     android:id="@+id/charactercolor"
     android:text="设置"
     android:layout_width="80px"
     android:layout_height="55px"
     android:layout_marginLeft = "40dip"
     android:layout_marginTop="5px"/>
    </TableRow>
     </TableLayout>
     <TableLayout 
     android:id="@+id/tablelayout20"
     android:layout_width="800dip"
     android:layout_height="480dip"
     android:layout_marginTop= "10px" 
     >
     
     	<TableRow> 
